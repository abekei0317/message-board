<div class="panel panel-default">
  <div class="panel-heading">
      メッセージ一覧
  </div>
  <div class="panel-body">
          <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
          <%= message.body %>
        <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %> 
  
  <div class="form-group">
    <label class="col-sm-2 control-label">名前：</label>
      <div class="col-sm-6">
        <%= f.text_field :name, size: 40, maxlength: 20, class: "form-control"  %>
      </div>
    <div class="col-sm-4"></div>
  </div>
  
  <div class="form-group">
        <label class="col-sm-2 control-label">内容：</label>
        <div class="col-sm-6">
          <%= f.text_area :body,  maxlength: 20,  class: "form-control" %>
        </div>
      <div class="col-sm-4"></div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-2"></div>
      <div class="col-sm-6">
        <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
    <div class="col-sm-4"></div>
<% end %>